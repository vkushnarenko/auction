    <%= form.label :startPrice %>
    <%= form.text_field :startPrice, id: :lot_startPrice %>
  </div>

  <div class="field">
    <%= form.label :startTime %>
    <%= form.datetime_select :startTime, id: :lot_startTime %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, id: :lot_duration %>
